#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Pre-commit hook: type-check, test, build (silent unless failure)
npm run type-check:all > /dev/null 2>&1 || (echo "❌ Type check failed"; exit 1)
npm test -- --run > /dev/null 2>&1 || (echo "❌ Tests failed"; exit 1)
npm run build:all > /dev/null 2>&1 || (echo "❌ Build failed"; exit 1)
echo "✅ Pre-commit checks passed"
