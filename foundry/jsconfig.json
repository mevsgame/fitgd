{
  "compilerOptions": {
    "checkJs": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "../dist/*": ["./dist/*"]
    }
  },
  "include": ["module/**/*.mjs"],
  "exclude": ["node_modules", "dist"]
}
