{
  "name": "@fitgd/core",
  "version": "0.14.0",
  "description": "Event-sourced Redux state management for Forged in the Grimdark RPG system",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "prepare": "husky install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build": "tsc --noEmit && vite build",
    "build:lib": "vite build",
    "build:foundry": "vite build",
    "build:all": "npm run build",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch",
    "dev:foundry": "vite build --watch",
    "type-check": "tsc --noEmit",
    "type-check:foundry": "tsc --noEmit --project foundry/tsconfig.json",
    "type-check:all": "npm run type-check && npm run type-check:foundry",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "benchmark": "tsx benchmark/selectors.bench.ts"
  },
  "keywords": [
    "rpg",
    "forged-in-the-dark",
    "redux",
    "event-sourcing",
    "foundry-vtt"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.19.0",
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.2",
    "immer": "^10.2.0",
    "pnpm": "^10.22.0"
  },
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "13.346.0-beta.20251110213629",
    "@types/node": "^24.9.2",
    "@vitest/ui": "^4.0.6",
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.6"
  }
}
